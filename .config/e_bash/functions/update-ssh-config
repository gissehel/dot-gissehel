function update-ssh-config {
    [ -d ~/.ssh/config.d ] || return 1
    mark="# This file is autogenerated"
    if [ -f ~/.ssh/config ] ; then
        grep "${mark}" ~/.ssh/config > /dev/null || return 1
    fi
    echo "${mark}" > ~/.ssh/config
    cat ~/.ssh/config.d/*.config >> ~/.ssh/config
    chmod 600 ~/.ssh/config
}
